<h1>Games Available To Join</h1>
</br>
<% if @opengames.present? %>
  <% @opengames.each do |game| %>
    <p>
      <%= game.name %>
      <%= link_to 'Join Game', game_path(game), method: :put %>
    </p>
  <% end %>
<% else %>
  </br>
  </br>
  <h4> There are no open games right now.</h4>
<% end %>
</br>
<button type="button" class="btn btn-info btn-sm btn-danger" data-toggle="modal" data-target="#newGameModal">Create New Game</button></br>


<!-- Modal -->
<div id="newGameModal" class="modal fade" role="dialog">
  <div class="modal-dialog">

    <!-- Modal content-->
    <div class="modal-content" id="new-game-modal">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Create New Game</h4>
      </div>
      <div class="modal-body">
        <p>Enter a name for your game</p>
        <div class="field">
          <%= simple_form_for @game do |f| %>
           <h5> <%= f.label :name %> </h5>
  			<%= f.text_field :name %>
  		</div>
      </div>
      <div class="modal-footer">
      	<%= f.submit "Create Game", class: 'btn btn-default' %>
        <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
        <% end %>
      </div>
    </div>
  </div>
</div>
</br>